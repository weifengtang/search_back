<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.twf.dao.IUserDao">

	<sql id="likeQuery">

		<if test="queryText!=null and queryText!=''">
			and userName like concat('%',#{queryText},'%')
			or name like concat('%',#{queryText},'%')
		</if>
	</sql>
	<select id="queryUserPageBean" parameterType="com.twf.pojo.PageBean" resultType="com.twf.pojo.User">
		select * from t_user
		<where>
			<include refid="likeQuery" />
		</where>
		order by createTime desc
		limit #{start}, #{pagesize}
	</select>

	<select id="queryUserSize" parameterType="com.twf.pojo.PageBean" resultType="java.lang.Integer">
		select count(*) from t_user
		<where>
			<include refid="likeQuery" />
		</where>
	</select>
	<update id="updateUser" parameterType="com.twf.pojo.User">
			update t_user set 
				name=#{name},
				userName=#{userName},
				passWord=#{passWord},
				email=#{email}
			where id=#{id}<!--  group=${group} and -->
	</update>
	
